.form-group
  .row
    .col-md-6
      label.control-label= raw t('.name')
      = f.input :name, label: false, input_html: { class: 'form-control', required: true }, disabled: update_permission
hr
.form-group
  .row
    .col-md-6
      label.control-label= t('.address')
      .row.mb10
        .col-md-12= f.input_field :street_address, placeholder: t('.street_placeholder'), class: 'form-control', disabled: update_permission
      .row.mb10
        .col-md-6= f.input_field :city, placeholder: t('.city_placeholder'), class: 'form-control mb10', disabled: update_permission
        .col-md-6= f.input_field :zip_code, placeholder: t('.zip_placeholder'), class: 'form-control', disabled: update_permission
    .col-md-6
      label.control-label= t('.contact')
      .row.mb10
        .col-md-12= f.input_field :contact_name, placeholder: t('.contact_name_placeholder'), class: 'form-control', disabled: update_permission
      .row
        .col-md-12= f.input_field :email, placeholder: t('.email_placeholder'), class: 'form-control', disabled: update_permission
      .row.mb10
        .col-md-6
          label.control-label= t('.phone')
          = f.input_field :phone, placeholder: t('.phone_placeholder'), class: 'form-control', disabled: update_permission
        .col-md-6
          label.control-label= t('.fax')
          = f.input_field :fax, placeholder: t('.fax_placeholder'), class: 'form-control', disabled: update_permission
hr
.form-group
  .row
    .col-md-6
      label.control-label= t('.order_info')
      .row.mb10
        .col-md-12= f.input_field :shipping_method, placeholder: t('.shipping_method_placeholder'), class: 'form-control', disabled: update_permission
      .row.mb10
        .col-md-12= f.input_field :shipping_terms, placeholder: t('.shipping_terms_placeholder'), class: 'form-control', disabled: update_permission