<% content_for :page_heading do %>
  Reset your Lodgistics Admin password
<% end %>

<%= simple_form_for resource, as: resource_name, url:  password_path(resource_name), method: :post, html: {class: 'panel', name: 'form-login'} do |f|%>
  <div class="panel-body">
    <!-- Alert message -->
    <%= render 'layouts/alerts', locals: {flash: flash}%>

    <!--/ Alert message -->

    <p>Submit your email address to receive a link to reset your password. <p>
    <div class="form-group">
      <div class="form-stack has-icon pull-left">
        <%= f.text_field :email, :placeholder => "Email", :class => 'form-control input-lg', :data => { :'parsley-required' => "", :'parsley-error-message' => 'Please fill in your email', :'parsley-errors-container' => "#error-container" }%>
        <i class="ico-user2 form-control-icon"></i>
      </div>

    </div>

    <!-- Error container -->
    <div class="mb15" id="error-container"></div>
    <!--/ Error container -->


    <div class="form-group nm">
      <%=f.submit :class => "btn btn-block btn-success", :value => "Submit"  %>
    </div>
  </div>
<%end%>

