.page-header.page-header-block
  .page-header-section
    h4.pull-left
      | Public Area PM Analysis
      .pull-right#table-actions
    .pull-right
      .pull-right
        = link_to 'Print PDF', '#', onclick: 'printPDF()', class: 'btn btn-default'
