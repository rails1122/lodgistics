<div class="panel panel-default new-chat">
  <div class="panel-heading">
    <h3 class="panel-title">Select Users To Create New Chat</h3>
  </div>

  <div class="panel-body">
    <form class="form-horizontal form-bordered" action="">
      <% unless @chat.is_private %>
        <div class="form-group">
          <label class="col-sm-3 control-label">Title</label>
          <div class="col-sm-9">
             <input type="text" class="form-control new-chat-title">
          </div>
        </div>
      <% end %>
      <div class="row" id="shuffle-grid">
        <% @users.each do |user| %>
          <div class="col-sm-6 col-md-4 shuffle">
            <%= render partial: 'chat_user', locals: { user: user } %>
          </div>
        <% end %>
      </div>
    </form>
    <button type="button" class="btn btn-primary mb5 create-new-chat-btn" disabled>Create a new chat</button>
  </div>
</div>
