.page-header.page-header-block
  .page-header-section
  .page-header-section
    .toolbar.clearfix
      .col-xs-5
        .btn-group
          = link_to purchase_requests_path, class: "btn #{@showing_closed ? 'btn-default' : 'btn-success active' }" do
            | Active
          = link_to purchase_requests_path(:scope => 'closed'), class: "btn #{@showing_closed ? 'btn-success active' : 'btn-default' }" do
            | Closed
      .col-xs-6.col-xs-push-1
        .has-icon
          input#datatable-filter.form-control name="datatable-filter" placeholder=t('.search_placeholder') type="search" /
          i.ico-search.form-control-icon

.panel.panel-default
  .table-wrapper
    .table-info.text-danger
    table.column-filtering.searchable-table.table.no-bottom-border.table-hover
      thead
        tr
          th
            input.form-control name="search_engine" placeholder="#" type="search" /
          th
            input.form-control name="search_engine" placeholder=t('.requested_by') type="search" /
          th
            input.form-control name="search_engine" placeholder=t('.delivery_date') type="search" /
          th
            input.form-control name="search_engine" placeholder=t('.vendors') type="search" /
          th
            input.form-control name="search_engine" placeholder=t('.items_and_cost') type="search" /
          th
            input.form-control name="search_engine" placeholder=t('.status') type="search" /
          th
        tr
          th.text-center= t('.number')
          th= t('.requested_by')
          th= t('.delivery_date')
          th= t('.vendors')
          th.text-center= t('.items_and_cost')
          th= t('.status')
          th.nosort.actions
      tbody
        = render @purchase_requests
